<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="control-pane" prefHeight="387.0" prefWidth="410.0" stylesheets="@Style-Serious.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.CPController">
    <HBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="TOP_CENTER" prefHeight="265.0" prefWidth="160.0" spacing="15.0">
            <Label alignment="CENTER" prefHeight="45.0" prefWidth="110.0" text="Execution">
                <font>
                    <Font size="25.0" />
                </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#run" prefHeight="45.0" prefWidth="155.0" text="Run">
            <font>
               <Font size="20.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#stop" prefHeight="45.0" prefWidth="155.0" text="Stop">
            <font>
               <Font size="20.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#step" prefHeight="45.0" prefWidth="155.0" text="Step">
            <font>
               <Font size="20.0" />
            </font></Button>
            <Button mnemonicParsing="false" onAction="#reset" prefHeight="45.0" prefWidth="155.0" text="Reset">
            <font>
               <Font size="20.0" />
            </font></Button>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="313.0" spacing="10.0">
            <Label alignment="CENTER" prefHeight="45.0" prefWidth="108.0" text="Timing">
                <font>
                    <Font size="25.0" />
                </font>
            </Label>
         <VBox id="timing-panel" prefHeight="300.0" prefWidth="160.0" spacing="15.0">
            <children>
                  <Label fx:id="lbl_runtime" prefHeight="35.0" prefWidth="148.0" text="Runtime: xx ms">
                      <font>
                          <Font size="20.0" />
                      </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="149.0" spacing="5.0">
                      <Label prefHeight="35.0" prefWidth="52.0" text="Quarz: ">
                          <font>
                              <Font size="15.0" />
                          </font>
                      </Label>
                      <ComboBox fx:id="drpd_hz" prefHeight="25.0" prefWidth="94.0" promptText="xx Hz" />
                  </HBox>
               <Label fx:id="lbl_pc" prefHeight="35.0" prefWidth="148.0" text="PC: XX">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
                  <CheckBox fx:id="chk_watchdog" mnemonicParsing="false" prefHeight="35.0" prefWidth="149.0" text="Watchdog">
                      <font>
                          <Font size="20.0" />
                      </font>
                  </CheckBox>
                  <Label prefHeight="35.0" prefWidth="148.0" text="Watchdog: xx">
                      <font>
                          <Font size="20.0" />
                      </font>
                  </Label>
               <Label fx:id="lbl_prescaler" contentDisplay="CENTER" prefHeight="35.0" prefWidth="153.0" text="Prescaler: x : x" textAlignment="CENTER">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </children>
         </VBox>
        </VBox>
    </HBox>
</AnchorPane>
